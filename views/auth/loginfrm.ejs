            <h3>Login</h3>
            <form action="/login" method="post" >
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="text" name="username" placeholder="User Name" style="margin:0 0 10px 0px;; width: 100%;" />
                <input type="text" name="password" placeholder="Password" style="margin:0 0 10px 0px;; width: 100%;" />
                <input type="submit" value="Login" style="cursor: pointer;" /> &nbsp; &nbsp; 
                <a href="/signup" >SignUp</a> &nbsp; &nbsp; &nbsp;
                <a href="/" >Back</a>
            </form>
        </div>
    </div>
</div>

